{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "composite": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}